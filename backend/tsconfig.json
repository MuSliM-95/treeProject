{
  "compilerOptions": {
    "target": "ES2018",                                  
    // "lib": [],                                       
    "jsx": "react",                                
                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    

    "module": "commonjs",                                
                                
    "moduleResolution": "node",                     
    
    "sourceMap": true,                               
   
    "outDir": "./dist",                                   
    "removeComments": true,                         

    "esModuleInterop": true,                            
  
    "forceConsistentCasingInFileNames": true,            


    "strict": true,                                   
    
    "strictPropertyInitialization": false,             
 
    "skipLibCheck": true                                 
  },

}
